@model IEnumerable<CopecoWebSite.Models.Inventario>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdministration";
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Inventario</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2><small>Lista de articulos</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <a asp-action="Create" class="btn btn-app">
                                <i class="fa fa-plus"></i> Agregar Usuario
                            </a>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table id="datatable-checkbox" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th><input type="checkbox" id="check-all"></th>
                                                <th>Nombre</th>
                                                <th>Marca</th>
                                                <th>Modelo</th>
                                                <th>Serie</th>
                                                <th>Placa</th>
                                                <th>Tipo</th>
                                                <th>Descripción</th>
                                                <th>Asignado a</th>
                                                <th></th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <th><input type="checkbox" id="check-all"></th>
                                                    <td>
                                                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Nombre)</a>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Marca)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Modelo)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Serie)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Placa)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Placa)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Placa)
                                                    </td>
                                                    <td>
                                                        <div style="text-align:center">
                                                            <a asp-action="Edit" asp-route-id="@item.Id" class="fa fa-edit">Editar</a> |
                                                            <a asp-action="Delete" asp-route-id="@item.Id" class="fa fa-trash-o">Eliminar</a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Asignar ariculos(s) seleccionados a</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form asp-action="Create">
                            <div class="field item form-group">
                                <label class="col-form-label col-md-3 col-sm-3  label-align">Empleado<span class="required">*</span></label>

                                <div class="col-md-6 col-sm-6 ">
                                <select class="form-control">
                                <option>Eliga a quien asignar</option>
                                <option value="1">Dir1</option>
                                <option value="2">Dir2</option>
                                <option value="3">Dir3</option>
                                <option value="4">Dir4</option>
                                </select>
                                </div>
                                </div>
                            @*<div class="field item form-group">
                                <label class="col-form-label col-md-3 col-sm-3  label-align">Tipo de Rol<span class="required">*</span></label>

                                <div class="col-md-6 col-sm-6 ">
                                    <select class="form-control">
                                        <option>Eliga Dirección</option>
                                        
                                    </select>
                                </div>
                            </div>*@
                            <div class="ln_solid">
                                <div class="form-group">
                                    <div class="col-md-6 offset-md-3">
                                        <button type='submit' value="Create" class="btn btn-primary">Asignar</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
