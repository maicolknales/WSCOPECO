@model CopecoWebSite.Models.Inventario

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutAdministration";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Usuarios</h3>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Editar usuario</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <a asp-action="Index" class="btn btn-app">
                                <i class="fa fa-reply"></i> Volver
                            </a>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form asp-action="Edit">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                             <input type="hidden" asp-for="Id" />
                            <div class="field item form-group">
                                <label class="col-form-label col-md-3 col-sm-3  label-align">Nombre<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6">
                                    <input asp-for="Nombre" class="form-control" type="text" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-3 col-sm-3  label-align">Marca<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6">
                                    <input asp-for="Marca" class="form-control" type="text" />
                                    <span asp-validation-for="Marca" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-3 col-sm-3  label-align">Modelo<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6">
                                    <input asp-for="Modelo" class="form-control" type="text" />
                                    <span asp-validation-for="Modelo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-3 col-sm-3  label-align">Serie<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6">
                                    <input asp-for="Serie" class="form-control" type="text" />
                                    <span asp-validation-for="Serie" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-3 col-sm-3  label-align">Placa<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6">
                                    <input asp-for="Placa" class="form-control" type="text" />
                                    <span asp-validation-for="Placa" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-3 col-sm-3  label-align">Color<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6">
                                    <input asp-for="Color" class="form-control" type="text" />
                                    <span asp-validation-for="Color" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-3 col-sm-3  label-align">Valor<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6">
                                    <input asp-for="Valor" class="form-control" type="text" />
                                    <span asp-validation-for="Valor" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-3 col-sm-3  label-align">Descripcion<span class="required">*</span></label>
                                <div class="col-md-6 col-sm-6">
                                    <input asp-for="Descripcion" class="form-control" type="text" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align">
                                    Fecha de adquisición* <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="FechaAdquisicion" id="birthday" class="date-picker form-control" placeholder="dd-mm-yyyy" type="text" required="required" onfocus="this.type='date'" onmouseover="this.type='date'" onclick="this.type='date'" onblur="this.type='text'" onmouseout="timeFunctionLong(this)">
                                    <span asp-validation-for="FechaAdquisicion" class="text-danger"></span>
                                    <script>
                                        function timeFunctionLong(input) {
                                            setTimeout(function() {
                                                input.type = 'text';
                                            }, 60000);
                                        }
                                    </script>
                                </div>
                            </div>
                            <div class="ln_solid">
                                <div class="form-group">
                                    <div class="col-md-6 offset-md-3">
                                        <button type='submit' value="Save" class="btn btn-primary">Guardar</button>
                                        <button type='reset' class="btn btn-success">Cancelar</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
