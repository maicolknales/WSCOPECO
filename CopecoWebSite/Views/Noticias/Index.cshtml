@model IEnumerable<CopecoWebSite.Models.Noticia>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdministration";
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Noticias</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2><small>Listado de noticias</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <a asp-action="Create" class="btn btn-app">
                                <i class="fa fa-plus"></i> Agregar Noticia
                            </a>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Titulo</th>
                                                <th>Subtitulo</th>
                                                <th>Descripción</th>
                                                <th></th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Titulo)</a>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Subtitulo)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                                    </td>
                                                    <td>
                                                        <div style="text-align:center">
                                                            <a asp-action="Edit" asp-route-id="@item.Id" class="fa fa-edit">Editar</a> |
                                                            <a asp-action="Delete" asp-route-id="@item.Id" class="fa fa-trash-o">Eliminar</a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
